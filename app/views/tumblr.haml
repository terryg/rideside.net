%div{:id=>"wrap"}
  %div{:id=>"container"}

    %div{:class=>"row"}
      %div{:class=>"col-lg-12"}

        %form{:method => "post", :action => "/tumblr"}
          %fieldset
            %h2
              SELECT TUMBLR BLOG TO POST UNDER
            %ul
              - @blogs.each do |b|
                %li
                  %label{:for => "#{b}"}
                    = b
                  %input{:type => "radio", :name => "blogname", :value => "#{b}"}
            %input{:type => "submit", :value => "send"}
